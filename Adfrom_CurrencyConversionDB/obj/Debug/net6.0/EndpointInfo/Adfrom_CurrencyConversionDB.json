{
  "openapi": "3.0.1",
  "info": {
    "title": "Adfrom_CurrencyConversionDB",
    "version": "1.0"
  },
  "paths": {
    "/api/currency/fetch-all-latest-currency-rates": {
      "get": {
        "tags": [
          "Currency"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/currency/get-currency-rate/{currencyCode}": {
      "get": {
        "tags": [
          "Currency"
        ],
        "parameters": [
          {
            "name": "currencyCode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/currency/convert-currency-rate": {
      "post": {
        "tags": [
          "Currency"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CurrencyConversionRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CurrencyConversionRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CurrencyConversionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/currency/get-stored-conversions": {
      "get": {
        "tags": [
          "Currency"
        ],
        "parameters": [
          {
            "name": "fromCurrency",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CurrencyConversionRequest": {
        "required": [
          "amount",
          "fromCurrencyCode",
          "toCurrencyCode"
        ],
        "type": "object",
        "properties": {
          "fromCurrencyCode": {
            "maxLength": 3,
            "minLength": 3,
            "pattern": "^[A-Z]{3}$",
            "type": "string",
            "default": "INR"
          },
          "toCurrencyCode": {
            "maxLength": 3,
            "minLength": 3,
            "pattern": "^[A-Z]{3}$",
            "type": "string",
            "default": "USD"
          },
          "amount": {
            "minimum": 0.01,
            "type": "number",
            "format": "double",
            "default": 100
          }
        },
        "additionalProperties": false
      }
    }
  }
}